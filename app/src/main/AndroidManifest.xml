<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.KoreanLearning"
        tools:targetApi="31">
        <activity
            android:name="com.example.myapplication.activities.LessonActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity> <!-- Profile Activity -->
        <activity
            android:name="com.example.myapplication.activities.ProfileActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity> <!-- Village Activity -->
        <activity
            android:name="com.example.myapplication.activities.VillageActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity> <!-- Main Activity -->
        <activity
            android:name="com.example.myapplication.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Quiz Activity -->
        <activity
            android:name="com.example.myapplication.activities.QuizActivity"
            android:exported="false" /> <!-- Progress Notification Service -->
        <service
            android:name="com.example.myapplication.services.ProgressNotificationService"
            android:exported="false" />
    </application>

</manifest>