<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Rounded background for default quiz buttons -->
    <drawable name="rounded_button_default">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/text_light" />
            <stroke android:width="2dp" android:color="@color/primary" />
        </shape>
    </drawable>

    <!-- Rounded background for correct feedback (Green) -->
    <drawable name="rounded_background_green">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/accent_green" />
        </shape>
    </drawable>

    <!-- Rounded background for incorrect feedback (Red) -->
    <drawable name="rounded_background_red">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/error" />
        </shape>
    </drawable>

    <!-- Rounded background for info/explanation feedback (Blue/Primary) -->
    <drawable name="rounded_background_info">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/primary" />
        </shape>
    </drawable>

    <!-- Rounded background for points display -->
    <drawable name="rounded_background_primary">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/primary" />
        </shape>
    </drawable>

    <!-- Circle button for microphone (Red) -->
    <drawable name="circle_button_red">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/error" />
        </shape>
    </drawable>
</resources>
